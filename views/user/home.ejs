<%- include('../layoutsUser/userheader') %>
<style>
    .small-title {
    font-size: 3rem;
    color: black;
}
.welcome{
   padding-left: 420px;
   margin-bottom: 40px;
   font-size: 50px;
   font-family:'Times New Roman', Times, serif;
}
