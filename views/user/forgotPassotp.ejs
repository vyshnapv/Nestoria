<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        background-color: #f5f5f5;
    }
 
    .otp-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 30px;
        border-radius: 12px;
        background: linear-gradient(135deg, #4f4839,#dbd3c5);
        color: white;
        max-width: 400px;
        width: 100%;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        margin: 0 auto;
        animation: fadeIn 1s ease;
    }
 
    .otp-container h3 {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 15px;
        text-align: center;
    }
 
    .otp-container label {
        font-size: 16px;
        font-weight: 500;
        color: #e6e6ff;
        margin-bottom: 5px;
        text-align: center;
    }
 
    .otp-container input {
        padding: 12px;
        border: none;
        border-radius: 8px;
        width: 100%;
        font-size: 16px;
        margin-top: 10px;
        text-align: center;
    }
 
    .btn-primary {
        background-color: #c96;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
    }
 
    .btn-primary:hover {
        background-color: rgb(111, 68, 24);
    }
 
    .resend-button {
        color: #b02525;
        margin-top: 15px;
        font-size: 14px;
        cursor: pointer;
        text-align: center;
        display: block;
        transition: color 0.3s;
    }
 
    .resend-button:hover {
        color: #ff5722;
    }
 
    .otp-timer-wrapper {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
 
    .otp-timer {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #bf552f;
        font-size: 18px;
        font-weight: bold;
        color: white;
        text-align: center;
        animation: pulse 1s infinite;
    }
 
    .text-muted {
        text-align: center;
        padding-top: 25px;
    }
 
    .text-muted a {
        color: #bf552f;
        font-weight: 600;
        transition: color 0.3s;
        text-decoration: none;
    }
 
    .text-muted a:hover {
        color: #ff5722;
    }
 
    /* Keyframe Animations */
    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
 
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
 </style>
 
 <div class="container col-4 login_wrap widget-taber-content p-30 mt-30">
    <div class="padding_eight_all">
        <div class="heading_s1 text-center">
            <h1>Email Verification OTP</h1>
        </div>
        <div class="otp-container">
            <form onsubmit="return validateOtpForm()">
                <div class="form-group">
                    <label for="otp">Enter OTP:</label>
                    <input type="text" id="otp" name="otp" class="form-control" maxlength="6" oninput="validateOtpInput(this)">
                </div><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Verify OTP</button>
                </div>
            </form>
            <div class="form-group otp-timer-wrapper">
                <div class="otp-timer" id="otpTimer"></div>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-link resend-button" onclick="resentOtp()">Resend OTP</button>
            </div>
            <%if(locals.message && message.length > 0){%>
            <div class="alert alert-danger mt-3">
                <%=message%>
            </div>
            <%}%>
        </div>
        <div class="text-muted text-center">
            Already verified? <a href="/login">Login now</a>
        </div>
    </div>
 </div>

 <script>
    let otpTimerInterval;
    let timer=60;
    
    function updateTimerColor(percentage){
        const timerElement = document.getElementById('otpTimer');

        if(percentage>50){
            timerElement.style.backgroundColor = '#28a745';
        }else if(percentage > 25){
            timerElement.style.backgroundColor = '#ffc107';
        }else{
            timerElement.style.backgroundColor = 'red';
        }
    }

    function startOtpTimer(){
        const timerElement = document.getElementById('otpTimer');
        otpTimerInterval = setInterval(function(){
            const minutes = Math.floor(timer/60)
            const seconds = timer%60;
            timerElement.textContent = `${minutes}:${seconds <10 ?'0':''}${seconds}`;
            updateTimerColor((timer/60)*100)
            if(--timer < 0){
                clearInterval(otpTimerInterval);
                timerElement.textContent = 'Expired';
                timerElement.style.backgroundColor = 'red';
            }
        },1000)
    }

    initializeOtpTimer();

    function initializeOtpTimer(){
        clearInterval(otpTimerInterval);
        timer = 60;
        startOtpTimer();
    }


    function validateOtpForm(){
       const otpInput = document.getElementById('otp').value;
       $.ajax({
        type:"post",
        url:"/verifyForgotPassotp",
        data:{otp:otpInput},
        success: function(response){
            if(response.success){
               Swal.fire({
                 icon:'success',
                 title:'otp verified successfully',
                 showConfirmButton:'false',
                 timer:1500
               }).then(()=>{
                  window.location.href = response.redirectUrl;
               })
               
            }else{
                Swal.fire({
                    icon:'error',
                    title:'Invalid otp',
                    text:response.message
                })
            }
        },
        error: function (){
            Swal.fire({
                icon:'error',
                title:'Error',
                text:'Failed to verify OTP.please try again'
            })
        }
       });
       return false;
    }


    function resentOtp(){
        clearInterval(otpTimerInterval)
        timer = 60;
        startOtpTimer();
        $.ajax({
            type:"post",
            url:"/resentForgotOtp",
            success: function(response){
               if(response.success){
                  Swal.fire({
                    icon:'success',
                    title:'Resent OTP successfull',
                    showConfirmButton:'false',
                    timer:1500
                   }) 
                }else{
                  Swal.fire({
                    icon:'error',
                    title:'Error',
                    text:'Failed to resend OTP.please try again later'
                  })
                }
            },
            error: function (){
               Swal.fire({
                   icon:'error',
                   title:'Error',
                   text:'Failed to resend OTP.please try again'
                })
            }
        })  
    }

    function validateOtpInput(input) {
    input.value = input.value.replace(/\D/g, '');
    }

 </script>
