<%- include('../layoutsUser/userheader') %>

<style>
    
.stock.in-stock {
    background-color: #28a745; 
    color: white;
    padding: 5px;
    border-radius: 3px;
    font-weight: bold;
}

.stock.only-left {
    background-color: #ffc107; 
    color: black;
    padding: 5px;
    border-radius: 3px;
    font-weight: bold;
}

.stock.out-of-stock {
    background-color: #dc3545;
    color: white;
    padding: 5px;
    border-radius: 3px;
    font-weight: bold;
}

</style>

<main class="main">
    <div class="page-header text-center" style="background-image: url('/productAssets/assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Furniture<span>Shop</span></h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->

    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Shop</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="products mb-3">
                        <div class="row justify-content-center">
                            <% if (products && products.length > 0) { %>
                                <% products.forEach(product => { %>
                                    <div class="col-6 col-md-4 col-lg-4">
                                        <div class="product product-7 text-center">
                                            <figure class="product-media">
                                                <span class="product-label label-out">
                                                    <% if (product.quantity >= 10) { %>
                                                        <!-- In stock -->
                                                        <div class="stock in-stock">In Stock</div>
                                                    <% } else if (product.quantity > 0) { %>
                                                        <!-- Only a few left -->
                                                        <div class="stock only-left">Only <%= product.quantity %> left in stock</div>
                                                    <% } else { %>
                                                        <!-- Out of stock -->
                                                        <div class="stock out-of-stock">Out of stock</div>
                                                    <% } %>
                                                </span>
                                                <a href="/product/<%= product._id %>">
                                                    <img src="/uploads/cropped/<%= product.productImage[0] %>" alt="Product image" class="product-image">
                                                </a>
                    
                                                <div class="product-action">
                                                    <a href="#" class="btn-product btn-cart"><span>add to cart</span></a>
                                                </div><!-- End .product-action -->
                                            </figure><!-- End .product-media -->
                    
                                            <div class="product-body">
                                                <div class="product-cat">
                                                    <a href="#">Category</a>
                                                </div><!-- End .product-cat -->
                    
                                                <h3 class="product-title">
                                                    <a href="/product/<%= product._id %>"><%= product.productName %></a>
                                                </h3><!-- End .product-title -->
                    
                                                <div class="product-price">
                                                    â‚¹<%= product.salePrice %>
                                                </div><!-- End .product-price -->
                    
                                                <div class="ratings-container">
                                                    <div class="ratings">
                                                        <div class="ratings-val" style="width: 20%;"></div><!-- End .ratings-val -->
                                                    </div><!-- End .ratings -->
                                                    <span class="ratings-text">( 2 Reviews )</span>
                                                </div><!-- End .rating-container -->
                                            </div><!-- End .product-body -->
                                        </div><!-- End .product -->
                                    </div><!-- End .col -->
                                <% }) %>
                            <% } else { %>
                                <p>No products available at the moment.</p>
                            <% } %>
                        </div><!-- End .row -->
                    </div>
                    <!-- End .products -->

                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link page-link-prev" href="?page=<%= currentPage - 1 %>&Category=<%= selectedCategory %>" aria-label="Previous">
                                        <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>Prev
                                    </a>
                                </li>
                            <% } else { %>
                                <li class="page-item disabled">
                                    <a class="page-link page-link-prev" href="#" aria-label="Previous" tabindex="-1" aria-disabled="true">
                                        <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>Prev
                                    </a>
                                </li>
                            <% } %>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&Category=<%= selectedCategory %>"><%= i %></a>
                                </li>
                            <% } %>
                    
                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link page-link-next" href="?page=<%= currentPage + 1 %>&Category=<%= selectedCategory %>" aria-label="Next">
                                        Next <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>
                                    </a>
                                </li>
                            <% } else { %>
                                <li class="page-item disabled">
                                    <a class="page-link page-link-next" href="#" aria-label="Next" tabindex="-1" aria-disabled="true">
                                        Next <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div><!-- End .col-lg-9 -->

                <aside class="col-lg-3 order-lg-first">
                    <div class="sidebar sidebar-shop">
                        <div class="widget widget-collapsible">
                            <h3 class="widget-title">Category</h3>
                            <div class="collapse show" id="widget-1">
                                <div class="widget-body">
                                    <div class="filter-items filter-items-count">
                                        <% if (category && category.length > 0) { %>
                                            <% category.forEach((cat, i) => { %>
                                                <div class="filter-item">
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" id="cat-<%= i %>" 
                                                            <%= selectedCategory === cat.name ? 'checked' : '' %>
                                                            onchange="window.location.href='/shop?Category=<%= cat.name %>'">
                                                        <label class="custom-control-label" for="cat-<%= i %>">
                                                            <a href="/shop?Category=<%= cat.name %>" 
                                                               class="category-link <%= selectedCategory === cat.name ? 'active' : '' %>">
                                                                <%= cat.name %>
                                                            </a>
                                                        </label>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        <% } else { %>
                                            <p>No categories available.</p>
                                        <% } %>
                                    </div><!-- End .filter-items -->
                                </div><!-- End .widget-body -->
                            </div><!-- End .collapse -->
                        </div><!-- End .widget -->
                    </div><!-- End .sidebar sidebar-shop -->
                </aside><!-- End .col-lg-3 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .page-content -->
</main><!-- End .main -->

<%- include('../layoutsUser/userfooter') %>
