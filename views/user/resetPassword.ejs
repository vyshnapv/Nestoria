<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nestoria</title>
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg" />
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Main content background */
        body {
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Card container */
        .content-main {
            max-width: 500px;
            width: 100%;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.3);
            border-radius: 15px;
            overflow: hidden;
            background-color:whitesmoke;
            padding: 40px 30px;
        }

        /* Card title */
        .card-title {
            font-size: 2em;
            font-weight: 700;
            color: #333;
            text-align: center;
            margin-bottom: 1.5em;
            letter-spacing: 1px;
        }

        /* Input fields */
        .form-control {
            font-size: 1.1em;
            padding: 12px 15px;
            border: none;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 25px;
            transition: box-shadow 0.3s ease, transform 0.2s ease;
        }

        .form-control:focus {
            outline: none;
            box-shadow: 0px 4px 12px rgba(227, 206, 83, 0.5);
            transform: scale(1.02);
        }

        /* Error message styling */
        .text-danger {
            font-size: 0.9em;
            color: #dc3545;
            margin-top: -20px;
            margin-bottom: 10px;
            display: block;
            transition: opacity 0.3s ease;
        }

        /* Button styling */
        .btn-primary {
            font-size: 1.2em;
            padding: 12px;
            width: 100%;
            background: linear-gradient(135deg, rgb(109, 73, 36), rgb(207, 142, 77));
            border: none;
            border-radius: 8px;
            color: white;
            font-weight: 600;
            box-shadow: 0px 5px 10px rgba(199, 199, 49, 0.4);
            transition: background 0.3s ease, transform 0.2s ease;
        }

        .btn-primary:hover {
            background:linear-gradient(135deg, rgb(207, 142, 77),rgb(109, 73, 36));
        }

        /* Alert message */
        .alert {
            font-size: 1em;
            padding: 10px;
            border-radius: 8px;
            text-align: center;
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        /* Link styling */
        .text-center a {
            color: #4f6ef7;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .text-center a:hover {
            color: #3e4bbf;
        }

        /* Animations */
        .form-control, .btn-primary {
            transition: all 0.3s ease;
        }

    </style>
</head>
<body>

<section class="content-main">
    <div class="card-body">
        <h4 class="card-title">Change Password</h4>
        <form method="post" action="/resetPassword" onsubmit="return validateForm()">
            <div class="form-group position-relative">
                <input 
                    class="form-control" 
                    name="newPass1" 
                    id="newPass1" 
                    placeholder="Enter new password" 
                    type="password" 
                >
                <div id="newPass1Error" class="text-danger"></div>
            </div>

            <div class="form-group position-relative">
                <input 
                    class="form-control" 
                    name="newPass2" 
                    id="newPass2" 
                    placeholder="Re-enter new password" 
                    type="password" 
                >
                <div id="newPass2Error" class="text-danger"></div>
            </div>

            <button type="submit" class="btn btn-primary">Change Password</button>

            <% if (locals.message && message.length > 0) { %>
                <div id="alertMessage" class="alert alert-danger text-center mt-4">
                    <%= message %>
                </div>
            <% } %>
        </form>

        <p class="text-center mt-4">Don't have an account? <a href="/register">Sign up</a></p>
    </div>
</section>


<!-- Bootstrap and custom scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
function validateForm() {
    let valid = true;

    const newPass1 = document.getElementById('newPass1');
    const newPass2 = document.getElementById('newPass2');
    const newPass1Error = document.getElementById('newPass1Error');
    const newPass2Error = document.getElementById('newPass2Error');

    newPass1Error.textContent = '';
    newPass2Error.textContent = '';

    if (!newPass1.value.trim()) {
        newPass1Error.textContent = 'Password cannot be empty.';
        valid = false;
    } else if (newPass1.value.length < 6) {
        newPass1Error.textContent = 'Password must be at least 6 characters long.';
        valid = false;
    }

    if (!newPass2.value.trim()) {
        newPass2Error.textContent = 'Please re-enter your password.';
        valid = false;
    } else if (newPass2.value !== newPass1.value) {
        newPass2Error.textContent = 'Passwords do not match.';
        valid = false;
    }

    return valid;
}

</script>

</body>
</html>
